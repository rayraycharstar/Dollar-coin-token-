}// WalletConnect Setup
const walletConnectModal = new WalletConnectModal({
    projectId: 'YOUR_WALLET_CONNECT_PROJECT_ID', // Replace with your WalletConnect Project ID
    themeMode: 'dark',
    themeVariables: {
        '--wcm-accent-color': '#d4af37', // Gold color
        '--wcm-background-color': '#222',
        '--wcm-text-color': '#fff'
    }
});

let signClient;
let walletAddress = null;

// Initialize WalletConnect
async function initializeWalletConnect() {
    try {
        signClient = await SignClient.init({
            projectId: 'YOUR_WALLET_CONNECT_PROJECT_ID', // Replace with your WalletConnect Project ID
            metadata: {
                name: 'DC Dollar Coin',
                description: 'Trade Runes and BRC-20 tokens',
                url: 'https://dcdollarcoin.u',
                icons: ['https://dcdollarcoin.u/icon.png']
            }
        });

        // Handle session events
        signClient.on('session_delete', () => {
            disconnectWallet();
        });

        signClient.on('session_expire', () => {
            disconnectWallet();
            document.getElementById('tradeResult').innerText = 'Wallet session expired. Please reconnect.';
        });

        // Restore previous session if exists
        const lastSession = signClient.session.getAll().slice(-1)[0];
        if (lastSession) {
            walletAddress = lastSession.namespaces.bitcoin.accounts[0].split(':')[2];
            updateWalletUI();
        }
    } catch (err) {
        console.error('WalletConnect Init Error:', err.message);
        document.getElementById('tradeResult').innerText = 'Error initializing WalletConnect: ' + err.message;
    }
}

// Connect Wallet
async function connectWallet() {
    try {
        const { uri, approval } = await signClient.connect({
            requiredNamespaces: {
                bitcoin: {
                    methods: ['bitcoin_signMessage', 'bitcoin_getAccounts'],
                    chains: ['bitcoin:1'],
                    events: ['accountsChanged']
                }
            }
        });

        if (uri) {
            await walletConnectModal.openModal({ uri });
            const session = await approval();
            walletAddress = session.namespaces.bitcoin.accounts[0].split(':')[2];
            updateWalletUI();
            walletConnectModal.closeModal();
        }
    } catch (err) {
        console.error('Wallet Connect Error:', err.message);
        document.getElementById('tradeResult').innerText = 'Failed to connect wallet: ' + err.message;
    }
}

// Disconnect Wallet
function disconnectWallet() {
    walletAddress = null;
    updateWalletUI();
    signClient.session.getAll().forEach(session => signClient.disconnect({ topic: session.topic }));
}

// Update Wallet UI
function updateWalletUI() {
    const connectBtn = document.getElementById('connectWalletBtn');
    const disconnectBtn = document.getElementById('disconnectWalletBtn');
    const walletAddressSpan = document.getElementById('walletAddress');
    const tradeAddressInput = document.getElementById('tradeAddress');

    if (walletAddress) {
        connectBtn.style.display = 'none';
        disconnectBtn.style.display = 'inline-block';
        walletAddressSpan.innerText = `Connected: ${walletAddress}`;
        tradeAddressInput.value = walletAddress;
        tradeAddressInput.readOnly = true;
    } else {
        connectBtn.style.display = 'inline-block';
        disconnectBtn.style.display = 'none';
        walletAddressSpan.innerText = '';
        tradeAddressInput.value = '';
        tradeAddressInput.readOnly = false;
    }
}

// Sanitize inputs to prevent XSS
function sanitizeInput(value) {
    return value.replace(/[<>&"'/]/g, char => ({
        '<': '<',
        '>': '>',
        '&': '&',
        '"': '"',
        "'": ''',
        '/': '/'
    }[char]));
}

// Fetch CSRF Token
async function fetchCSRFToken() {
    try {
        const response = await fetch('https://dcdollarcoin.u:3000/magic-eden/runes/prices', {
            credentials: 'include'
        });
        if (!response.ok) throw new Error('Failed to fetch CSRF token');
        const cookies = document.cookie.split(';').find(cookie => cookie.trim().startsWith('csrfToken='));
        const token = cookies ? cookies.split('=')[1] : '';
        document.getElementById('csrfToken').value = token;
    } catch (err) {
        console.error('CSRF Token Error:', err.message);
        document.getElementById('tradeResult').innerText = 'Error initializing CSRF token: ' + err.message;
    }
}

// Fetch Magic Eden Runes Prices
async function fetchMagicEdenListings() {
    const listingsDiv = document.getElementById('magic-eden-listings');
    listingsDiv.innerHTML = 'Loading Magic Eden Runes Prices...';
    try {
        const response = await fetch('https://dcdollarcoin.u:3000/magic-eden/runes/prices', {
            credentials: 'include'
        });
        if (!response.ok) throw new Error('Failed to fetch Magic Eden prices');
        const data = await response.json();
        listingsDiv.innerHTML = `Magic Eden Runes Prices:\n${JSON.stringify(data, null, 2)}`;
    } catch (error) {
        listingsDiv.innerHTML = `Error fetching Magic Eden prices: ${error.message}`;
    }
}

// Fetch OKX BRC-20 Prices
async function fetchOkxTrades() {
    const tradesDiv = document.getElementById('okx-trades');
    tradesDiv.innerHTML = 'Loading OKX BRC-20 Prices...';
    try {
        const response = await fetch('https://dcdollarcoin.u:3000/okx/brc20/prices', {
            credentials: 'include'
        });
        if (!response.ok) throw new Error('Failed to fetch OKX prices');
        const data = await response.json();
        tradesDiv.innerHTML = `OKX BRC-20 Prices:\n${JSON.stringify(data, null, 2)}`;
    } catch (error) {
        tradesDiv.innerHTML = `Error fetching OKX prices: ${error.message}`;
    }
}

// Fetch Prices
async function fetchPrices() {
    await Promise.all([fetchMagicEdenListings(), fetchOkxTrades()]);
}

// Handle Trade Form Submission
document.getElementById('tradeForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const form = e.target;
    const resultBox = document.getElementById('tradeResult');
    resultBox.innerText = 'Submitting trade...';

    const data = {
        tokenSymbol: sanitizeInput(form.tokenSymbol.value.trim()),
        amount: parseInt(form.amount.value),
        side: form.side.value,
        address: sanitizeInput(form.address.value.trim()),
        _csrf: form._csrf.value
    };

    if (!data.tokenSymbol || isNaN(data.amount) || data.amount <= 0) {
        resultBox.innerText = 'Invalid input: Token symbol and amount are required, and amount must be positive.';
        return;
    }
    if (!['buy', 'sell'].includes(data.side)) {
        resultBox.innerText = 'Invalid side: Must be "buy" or "sell".';
        return;
    }
    if (form.platform.value === 'magiceden' && !data.address) {
        resultBox.innerText = 'Address is required for Magic Eden trades.';
        return;
    }

    const platform = form.platform.value;
    const endpoint = platform === 'okx' ? 'https://dcdollarcoin.u:3000/okx/trade' : 'https://dcdollarcoin.u:3000/magic-eden/runes/trade';

    try {
        const res = await fetch(endpoint, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            credentials: 'include',
            body: JSON.stringify(data)
        });

        if (!res.ok) {
            const errorData = await res.json();
            throw new Error(errorData.error || 'Trade request failed');
        }

        const json = await res.json();
        resultBox.innerText = JSON.stringify(json, null, 2);
    } catch (err) {
        console.error('Trade Error:', err.message);
        resultBox.innerText = `Trade failed: ${err.message}`;
    }
});

// WalletConnect Event Listeners
document.getElementById('connectWalletBtn').addEventListener('click', connectWallet);
document.getElementById('disconnectWalletBtn').addEventListener('click', disconnectWallet);

// Initialize on Page Load
window.onload = async () => {
    await initializeWalletConnect();
    await fetchCSRFToken();
    await fetchPrices();
};